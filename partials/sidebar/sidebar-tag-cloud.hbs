{{!-- Tag Cloud --}}
{{#get "tags" limit="10" include="count.posts" order="count.posts desc"}}
<div class="sidebar-items u-marginBottom30">
    <h3 class="sidebar-title u-fontSizeBase u-textColorDarker"><span class="text-circle-line">{{t "Tag Cloud"}}</span></h3>
    <div class="buttonSet">
        {{#foreach tags}}
            <a href="{{url absolute="true"}}" title="{{name}}" class="button button--tag button--line u-textCapitalize">{{name}}</a>
        {{/foreach}}
    </div>
</div>
{{/get}}
